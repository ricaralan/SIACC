extends layout

block content
  div(class="progress", id="loadPage", style="margin:0;")
      div(class="indeterminate")
  div(ng-app="UsuariosModule")
    app-for-users
      div(id="contentApp", hidden, ng-controller="TiposUsuarioController")
        a(class="waves-effect waves-light btn right" ng-click="setDatosCrearTipoUsuario()") Crear nuevo
        h3 Tipos de usuario

        // MODAL OPCION TIPO USUARIO
        div(id="modalOpcionesTipoUsuario" class="modal")
          div(class="modal-content")
            h4 Crear tipo de área
            table
              tr
                td
                  div(class="input-field col s6")
                    input(id="area_name", type="text", class="validate", ng-model="formTipoArea.tipo_nombre")
                    label(for="area_name") Nombre del tipo de área
              tr
                td
                  div(class="input-field col s6")
                    textarea(id="area_name", class="materialize-textarea", class="validate", ng-model="formTipoArea.tipo_descripcion")
                    label(for="area_name") Descripción del tipo de área
              tr
                td
                  p Foto del área
                    form(id="formTipoFoto")
                      input(type="file", id="tipo_foto", file-model="formTipoArea.tipo_foto")
            p(class="divider")
            p Modulos permitidos

            table(class="bordered")
              tr
                th Permiso
                th Descripción
              tr(ng-repeat="modulo in todosLosModulos")
                td
                  input(type="checkbox", id="check{{modulo.id_modulo}}")
                  label(for="check{{modulo.id_modulo}}") {{modulo.mod_nombre}}
                td {{modulo.mod_descripcion}}


          div(class="modal-footer")
            a(href="#!" class="modal-action modal-close waves-effect btn-flat") Cancelar
            button(class=" waves-effect waves-green btn-flat", ng-click="opcionTipoArea()", id="btnOpcionTipoAreas") Crear


  script(src="/javascripts/angular/angular.min.js")
  script(src="/socket.io/socket.io.js")
  script(src="/javascripts/angular/angular_modules/AppModule.js")
  script(src="/javascripts/angular/angular_modules/UsuariosModule.js")
